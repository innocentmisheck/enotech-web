<div class="fluid-container">
  <h3 class="mt-2 font-weight-bold">{{title}}</h3>
<hr>
<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-primary font-weight-bold float-right mb-3" data-toggle="modal" data-target="#exampleModal">
  Support Now
</button>

</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title font-weight-bold text-primary" id="exampleModalLabel">Supporter Information</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="api/transcations" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1" class="font-weight-bold text-danger">Email *</label>
            <input type="email" name="email" class="form-control mt-1" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your Email Address">
            <small id="emailHelp" class="form-text text-muted float-right">We'll never share your email with anyone else.</small>
          </div>
          <div class="contaner col-12 d-flex">
           <div class="form-group mt-2 col-6">
            <label for="exampleInputPassword1" class="font-weight-bold text-danger">Amount *</label>
            <input type="number" name="amount" class="form-control" id="exampleInputAmount1" placeholder="Enter Amount">
          </div>
           <div class="form-group mt-2 mx-2 col-6">
            <label for="exampleInputPassword1" class="font-weight-bold text-primary">Date</label>
            <input type="date" name="date" class="form-control" id="exampleInputDate1">
          </div>
          </div>
          <div class="form-check mt-2">
            <input type="checkbox" name="status" class="form-check-input mt-2" id="exampleCheck1">
            <label class="form-check-label mt-2" for="exampleCheck1">Remember me</label>
          </div>
          <hr>
           <input type="submit" class="btn btn-primary mt-2" value="Submit"></input>
          <button type="button" class="btn btn-danger mt-2" data-dismiss="modal">Close</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{!-- data table --}}
<div class="fluid-container mt-3">
    <h5>Recent Supports</h4>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      {{!-- <th scope="col">#</th> --}}
      <th scope="col">Email</th>
      <th scope="col" class="text-center">Amount</th>
      <th scope="col" class="text-center">Date</th>
      <th scope="col" class="text-center">Status</th>
    </tr>
  </thead>
  <tbody>
     {{#each transcation}}
    <tr>
      {{!-- <th scope="row"> {{this.visitorId}}</th> --}}
      <td>{{this.email}}</td>
      <td class="text-center">{{this.amount}}</td>
      <td class="text-center">{{this.date}}</td>
      <td class="text-center font-weight-bold text-white bg-success">{{this.status}}</td>
    </tr>
     {{/each}}
  </tbody>
</table>
</div>
 
